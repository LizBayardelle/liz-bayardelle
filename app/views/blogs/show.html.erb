<div class="container col-xs-10 col-xs-push-1">
	<div class="text-center row">
		<h1><%= @blog.title %></h1>
		<div class="row">
			<div class="col-sm-8 col-sm-push-2">
				<p><%= @blog.teaser %></p>
				<p><strong>Tags: <%= raw @blog.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></strong></p>
			</div>
		</div>
		<% if current_user && current_user.admin %>
			<%= link_to "Edit Blog | ", edit_blog_path(@blog) %>
		<% end %>
		<%= link_to "Back to Blogs", blogs_path %>
	</div> <!-- center header -->

	<div class="row">
	    <hr class="col-xs-6 col-xs-push-3">
	</div> <!-- row -->

	<div class="row">
		<%= markdown(@blog.body).html_safe %>
	</div> <!-- blogs -->

	<div class="row text-center">
		<hr class="col-xs-6 col-xs-push-3">
	</div>

	<div class="text-center">
		<%= link_to "Back to Blogs", blogs_path %>
	</div>
</div> <!-- page container -->
