<div class="container">
	<div class="text-center">
		<h1>Edit <%= @blog.title %></h1>
	</div> <!-- center header -->
	<div>
		<%= simple_form_for [:liz, @blog], url: {action: "update"} do |b| %>
			<div class="form-group">
				<%= b.label :title %>
				<%= b.text_field :title, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= b.label :teaser %>
				<%= b.text_area :teaser, rows: 2, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= b.label "Tags" %>
				<%= b.text_area :tag_list, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= b.input :body, :input_html => {:rows => 10, :placeholder => "Enter some text.", "data-provide" => "markdown" }%>
			</div>
			<div class="text-center">
				<%= b.submit "Submit", class: "btn" %>
			</div>
		<% end %>
	</div> <!-- blogs -->
</div> <!-- page container -->